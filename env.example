# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AI Providers (Optional - at least one recommended, falls back to mock data)
# System will try in order: OpenAI -> Gemini -> Claude
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
GEMINI_API_KEY=your_google_gemini_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Data APIs (Optional for MVP - falls back to mock data)
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here
APIFY_API_KEY=apify_api_your_apify_api_key_here

# Image Generation (For Creative Studio)
# Priority: OpenAI DALL-E 3 (highest quality) → Gemini → Flux.1 → Stability AI
# At least ONE is recommended for best quality
FAL_API_KEY=your_fal_api_key_here
STABILITY_API_KEY=your_stability_api_key_here
# Note: OpenAI and Gemini keys above are also used for image generation

# ============================================================================
# Billing (Stripe) - Phase 3
# ============================================================================
# Used by server routes (/api/checkout, /api/webhooks/stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (server-side allowlist for /api/checkout)
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_AGENCY=price_...

# Public Price IDs for client-side pricing page (/pricing)
NEXT_PUBLIC_STRIPE_PRICE_STARTER=price_...
NEXT_PUBLIC_STRIPE_PRICE_PRO=price_...
NEXT_PUBLIC_STRIPE_PRICE_AGENCY=price_...

# App URL used for Stripe redirect URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase service role key (server-only) - required for Stripe webhook upserts
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================================================
# Billing Alternative (Paddle - Merchant of Record)
# ============================================================================
# Paddle environment: "sandbox" or "production"
PADDLE_ENV=sandbox

# Paddle API key (server-only)
PADDLE_API_KEY=pdl_sandbox_...

# Paddle webhook secret key for your notification destination (server-only)
PADDLE_WEBHOOK_SECRET=ntf_...

# Paddle Product IDs (you provided these; prices are discovered from products)
PADDLE_PRODUCT_STARTER=pro_...
PADDLE_PRODUCT_PRO=pro_...
PADDLE_PRODUCT_AGENCY=pro_...

